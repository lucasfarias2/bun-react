{
  "name": "bun-react",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "start": "bun index.ts",
    "build": "BUN_ENV=production rm -rf build && bun build ./src/entry.ts --outdir ./dist --splitting --minify",
    "watch": "BUN_ENV=development rm -rf dist && bun builder.ts",
    "dev": "BUN_ENV=development bun --hot index.ts --inspect"
  },
  "dependencies": {
    "elysia": "^0.7.30",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "bun-types": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
